{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment":{
            "type": "string"
        },
        "regionCode":{
            "defaultValue": "CaC",
            "type": "string"
        },
        "p_subnetName":{
            "type": "string"
        },
        "p_addressPrefix":{
            "type": "string"
        }
    },
    "variables": {
        "v_virtualnetworkName":"[concat('VNET-',parameters('regionCode'),'-',parameters('environment'),'-CoreNetwork')]",
        "v_newsubnetName":"[concat('Subnet-',parameters('regionCode'),'-',parameters('environment'),parameters('p_subnetName'))]"    
    },
    "resources": [
        {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(variables('v_virtualnetworkName'),'/',parameters('v_newsubnetName'))]",
            "location": "[resourcegroup().location]",
            "properties": {
              "addressPrefix": "[parameters('p_addressPrefix')]"
            }
          },
          {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(variables('v_virtualnetworkName'),'/','Subnet-',parameters('regionCode'),'-',parameters('environment'),'-FrontEnd')]",
            "location": "[resourcegroup().location]",
            "properties": {
              "addressPrefix": "10.20.6.0/28"
            }
          },
          {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(variables('v_virtualnetworkName'),'/','Subnet-',parameters('regionCode'),'-',parameters('environment'),'-MiddleTier')]",
            "location": "[resourcegroup().location]",
            "properties": {
              "addressPrefix": "10.20.7.0/27"
            }
          },
          {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "name": "[concat(variables('v_virtualnetworkName'),'/','Subnet-',parameters('regionCode'),'-',parameters('environment'),'-Database')]",
            "location": "[resourcegroup().location]",
            "properties": {
              "addressPrefix": "10.20.8.0/28"
            }
          }                          
    ],
    "outputs": {
      "boo": {
        "type": "string",
        "value": "boo"
      }
    }
  }
