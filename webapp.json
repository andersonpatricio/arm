{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment":{
            "type": "string"
        },
        "regionCode":{
            "defaultValue": "CaC",
            "type": "string"
        },        
        "webappName":{
            "type": "string"
        }
    },
    "variables": {
        "v_hostingPlanName":"[concat('HostingPlan-',parameters('regionCode'),'-',parameters('environment'))]",
        "v_currentStack":"dotnetcore",
        "v_phpVersion":"OFF",
        "v_hostingEnvironment":"",
        "v_alwaysOn":"true",
        "v_errorLink":"[concat('https://', varaibles('v_webappName'),'.scm.azurewebsites.net/detectors?type=tools&name=eventviewer')]",
        "v_DEV_sample": "DEVValue",
        "v_webappName":"[concat('WebApp-',parameters('regionCode'),'-',parameters('environment'),'-',varaibles('v_webappName'))]"
    },
    "resources": [    
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[varaibles('v_webappName')]",
            "comments": "** Azure Web App Provision **",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Insights/components', varaibles('v_webappName'))]"
            ],
            "properties": {
                "name": "[varaibles('v_webappName')]",
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                            "value": "[reference(concat('microsoft.insights/components/',varaibles('v_webappName')), '2015-05-01').InstrumentationKey]"
                        },
                        {
                            "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
                            "value": "[reference(concat('microsoft.insights/components/',varaibles('v_webappName')), '2015-05-01').ConnectionString]"
                        },
                        {
                            "name": "ApplicationInsightsAgent_EXTENSION_VERSION",
                            "value": "~2"
                        },
                        {
                            "name": "XDT_MicrosoftApplicationInsights_Mode",
                            "value": "default"
                        },
                        {
                            "name": "ANCM_ADDITIONAL_ERROR_PAGE_LINK",
                            "value": "[variables('v_errorLink')]"
                        },
                        {
                            "name": "OUTPUTVALUE",
                            "value": "[variables(concat('v_',parameters('environment'),'_Sample'))]"
                        }
                    ],
                    "metadata": [
                        {
                            "name": "CURRENT_STACK",
                            "value": "[variables('v_currentStack')]"
                        }
                    ],
                    "phpVersion": "[variables('v_phpVersion')]",
                    "alwaysOn": "[variables('v_alwaysOn')]"
                },
                "serverFarmId": "[resourceid('Microsoft.Web/serverfarms', variables('v_hostingPlanName'))]",
                "hostingEnvironment": "[variables('v_hostingEnvironment')]",
                "clientAffinityEnabled": true
            }
        },
        {
            "type": "Microsoft.Web/sites/config",
            "apiVersion": "2018-11-01",
            "name": "[concat(varaibles('v_webappName'), '/web')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', varaibles('v_webappName'))]"
            ],
            "properties": {
                "ftpsState": "Disabled"
            }
        },
        {
            "apiVersion": "2015-05-01",
            "name": "[varaibles('v_webappName')]",
            "type": "Microsoft.Insights/components",
            "location": "[resourceGroup().location]",
            "dependsOn": [
            ],
            "properties": {
                "ApplicationId": "[varaibles('v_webappName')]",
                "Request_Source": "IbizaWebAppExtensionCreate"
            }
        }
    ],
    "outputs": {
    }
  }
